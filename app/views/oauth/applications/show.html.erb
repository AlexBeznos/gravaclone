<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @application.name %>
        <div class="btn-group btn-group-xs pull-right" role="group" >
          <%= link_to 'Edit', edit_oauth_application_path(@application), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', oauth_application_path(@application), class: 'btn btn-danger', method: :destroy %>
        </div>
      </div>
      <div class="panel-body">
        <h4><%= t('.basic_info') %></h4>
        <ul class="list-group">
          <li class="list-group-item">
            <code class="pull-right"><%= @application.uid %></code>
            <%= t('.application_id') %>
          </li>
          <li class="list-group-item">
            <code class="pull-right"><%= @application.secret %></code>
            <%= t('.secret') %>
          </li>
          <li class="list-group-item">
            <code class="pull-right"><%= @application.scopes %></code>
            <%= t('.scopes') %>
          </li>
        </ul>
        <hr>
        <h4><%= t('.callback_urls') %></h4>
        <ul class="list-group">
          <% @application.redirect_uri.split.each do |uri| %>
            <li class="list-group-item">
              <%= link_to t('doorkeeper.applications.buttons.authorize'), oauth_authorization_path(client_id: @application.uid, redirect_uri: uri, response_type: 'code', scope: @application.scopes), class: 'pull-right btn btn-xs btn-success', target: '_blank' %>
              <code><%= uri %></code>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
