<!DOCTYPE html>
<html>
  <head>
    <title>Gravatar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
       <div class="header clearfix">
         <nav>
           <ul class="nav nav-pills pull-right">
             <% unless signed_in? %>
               <li role="presentation"><%= link_to 'Log in', sign_in_path %></li>
               <li role="presentation"><%= link_to 'Sign up', sign_up_path %></li>
             <% end %>
           </ul>
         </nav>
         <h3 class="text-muted"><a href='/'>GravaClone</a></h3>
       </div>

       <%= yield %>

       <footer class="footer">
         <p>&copy; 2016 Company, Inc.</p>
       </footer>

     </div> <!-- /container -->
  </body>
</html>
